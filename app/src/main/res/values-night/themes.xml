<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Hahowrecruit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hahow_green_500</item>
        <item name="colorPrimaryVariant">@color/hahow_green_700</item>
        <item name="colorOnPrimary">@color/hahow_yellow_500</item>
        <item name="colorPrimaryDark">@color/hahow_green_700</item>
        <item name="colorOnSurface">@color/hahow_black</item>
        <item name="colorAccent">@color/hahow_green_700</item>
        <item name="colorSurface">@color/hahow_gray_50</item>
        <item name="colorSecondary">@color/hahow_yellow_500</item>
        <item name="android:colorBackground">@color/hahow_green_500</item>
    </style>

    <style name="Theme.Hahowrecruit" parent="Base.Theme.Hahowrecruit"/>

    <style name="Theme.Hahowrecruit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
        <!--        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Sunflower.FAB</item>-->
    </style>

    <style name="Theme.Hahowrecruit.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Hahowrecruit.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>