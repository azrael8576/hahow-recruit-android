<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <!-- To see how these attributes are used, please visit https://material.io/develop/android/theming/color/ -->
    <style name="Base.Theme.Hahowrecruit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/hahow_white</item>
        <item name="colorPrimaryVariant">@color/hahow_gray_50</item>
        <item name="colorOnPrimary">@color/hahow_white</item>
        <item name="colorPrimaryDark">@color/hahow_green_500</item>
        <item name="colorOnSurface">@color/hahow_black</item>
        <item name="colorAccent">@color/hahow_gray_50</item>
        <item name="colorSurface">@color/hahow_black</item>
        <item name="colorSecondary">@color/hahow_black</item>
        <item name="android:colorBackground">@color/hahow_white</item>
    </style>

    <style name="Theme.Hahowrecruit" parent="Base.Theme.Hahowrecruit"/>

    <style name="Theme.Hahowrecruit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBarOverlay">true</item>
<!--        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Sunflower.FAB</item>-->
    </style>

    <style name="Theme.Hahowrecruit.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Hahowrecruit.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!--預設文字樣式 移除原生padding-->
    <style name="NoPaddingTextView" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--類別標題文字-->
    <style name="CategoryTitleText" parent="NoPaddingTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/base_headline</item>
        <item name="android:textColor">@color/hahow_black</item>
    </style>

    <!--課程標題文字-->
    <style name="CoursesTitleText" parent="NoPaddingTextView">
        <item name="android:textSize">@dimen/base_titleline</item>
        <item name="android:textColor">@color/hahow_black</item>
    </style>

</resources>