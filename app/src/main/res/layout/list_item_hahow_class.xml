<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/margin_normal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/card_item_image_width"
        android:layout_height="@dimen/card_item_image_height"
        app:cardCornerRadius="@dimen/card_image_corner_radius"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageview_hahow_class"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hahow_class_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            style="@style/CoursesTitleText"
            android:layout_marginBottom="@dimen/margin_small"
            tools:text="Node.js、MongoDB 網站後端工程入門" />

        <TextView
            android:id="@+id/hahow_class_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="彭彭" />
    </LinearLayout>
</LinearLayout>